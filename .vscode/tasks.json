{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "-fsanitize=address",
                "${workspaceFolder}/CARTE/*.cpp",
                "${workspaceFolder}/PHASE/*.cpp",
                "${workspaceFolder}/TRESOR/*.cpp",
                "${workspaceFolder}/VICTOIRE/*.cpp",
                "${workspaceFolder}/ROYAUME/*.cpp",
                "${workspaceFolder}/PARTIE/*.cpp",
                "lancement.cpp",
                "-o",
                "${workspaceFolder}/lancement",
                "-lasan"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/lancement",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "${workspaceFolder}/*.o",
                "${workspaceFolder}/lancement",
                "${workspaceFolder}/*~",
                "${workspaceFolder}/*.core"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
