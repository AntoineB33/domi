{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug lancement",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lancement",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/path/to/your/gdb", // replace with the path to your GDB executable
            "setupCommands": [
                {
                    "description": "Enable ASAN",
                    "text": "-enable-targets all",
                    "ignoreFailures": true
                }
            ],
            "stopAtEntry": false,
            "externalConsole": false,
            "serverLaunchTimeout": 5000
        }
    ]
}
